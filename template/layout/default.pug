doctype html
html
    head
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
        link(rel="stylesheet", href="assets/css/style.css")
        block title
    body
        //- Header
        header.header
            .container
                .header__wrap
                    button.header__button-menu
                        i.fa-solid.fa-bars
                    .header__logo
                        a(href="#")
                            img(src="assets/image/logo.svg" alt="Monito")
                    nav.header__menu
                        ul
                            li
                                a(href="#") Trang chủ
                            li 
                                a(href="#") Danh mục
                            li
                                a(href="#") Giới thiệu
                            li
                                a(href="#") Liên hệ
                    .header__search
                        form
                            button 
                                i.fa-solid.fa-magnifying-glass
                            input(type="text" placeholder="Nhập từ khóa...")
                    a(href="#" class="button button--primary") Tham gia cộng đồng

                    button.header__button-search
                        i.fa-solid.fa-magnifying-glass
        //- END HEADER
        
        block main

        //- FOOTER
        footer.footer
            .container
                .footer__top
                    h3.footer-title Đăng ký ngay để không bỏ lỡ các chương trình của chúng tôi
                    form.footer__form(action="")
                        input(type="email" placeholder="Nhập email của bạn...") 
                        button(type="submit") Đăng ký ngay
                .footer__middle        
                    nav.footer__menu
                        ul
                            li
                                a(href="#") Trang Chủ
                            li
                                a(href="#") Danh Mục
                            li
                                <a href="#">Giới Thiệu
                            li
                                a(href="#") Liên Hệ
                    nav.footer__socials
                        ul
                            li
                                a(href="#" target="_blank") <i class="fa-brands fa-facebook"></i>
                            li
                                a(href="#" target="_blank") <i class="fa-brands fa-x-twitter"></i>
                            li
                                a(href="#" target="_blank") <i class="fa-brands fa-instagram"></i>
                            li
                                a(href="#" target="_blank") <i class="fa-brands fa-youtube"></i>
                .footer__bottom
                    .footer__copyright © 2024 CHINH NGUYEN. All rights reserved.
                    .footer__logo
                        a(href="#")
                            img(src="assets/image/logo.svg")
                    nav.footer__links
                        ul
                            li
                                a(href="#") Điều khoản dịch vụ
                            li
                                a(href="#") Chính sách bảo mật

        //- END FOOTER 



                        
                            
                                
                    